{
  "compilerOptions": {
    "types": [
      "mocha",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./target/types/*"
      ]
    }
  },
  "include": [
    "tests/**/*",
    "target/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}